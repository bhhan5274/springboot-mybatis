{{>layout/header}}
<div class="container">
<div class="row">
    <div class="col-md-12">
        <div class="store">
            <div class="store__list-title"><i class="fas fa-plus-square text-primary"></i> Store Register</div>
            <div class="store__table">
                <table class="table table-bordered table-sm">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">content</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">shop_name</th>
                        <td><input type="text" class="form-control" id="shopName"></td>
                    </tr>
                    <tr>
                        <th scope="row">shop_location</th>
                        <td><input type="text" class="form-control" id="shopLocation"></td>
                    </tr>
                    <tr>
                        <th scope="row">shop_status</th>
                        <td>
                            <select id="shopStatus" class="form-control">
                                <option value="Y" selected>Y</option>
                                <option value="N">N</option>
                            </select>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="store__table-footer text-right">
                <button id="store__btn-add" class="btn btn-sm btn-outline-primary font-weight-bold">Add Shop</button>
                <a href="/shop/list" class="btn btn-sm btn-outline-secondary store__btn-add font-weight-bold">Go Back</a>
            </div>
        </div>
    </div>
</div>
</div>
{{>layout/footer}}