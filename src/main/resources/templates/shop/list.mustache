{{>layout/header}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="store">
                <div class="store__list-title"><i class="fas fa-store text-primary"></i> Store List</div>
                <div class="store__table">
                    <table class="table table-bordered table-sm table-responsive-lg">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">name</th>
                            <th scope="col">location</th>
                            <th scope="col">status</th>
                            <th scope="col" class="text-center">view</th>
                            <th scope="col" class="text-center">modify</th>
                            <th scope="col" class="text-center">delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#isEmpty}}
                            <td colspan="7" class="text-center font-weight-bold">The list does not exist.</td>
                        {{/isEmpty}}
                        {{#shops}}
                        <tr>
                            <th scope="row">{{shopNo}}</th>
                            <td>{{shopName}}</td>
                            <td>{{shopLocation}}</td>
                            <td>{{shopStatus}}</td>
                            <td class="text-center"><a href="/shop/view/{{shopNo}}" class="btn btn-primary btn-sm">view</a></td>
                            <td class="text-center"><a href="/shop/modify/{{shopNo}}" class="btn btn-secondary btn-sm">modify</a></td>
                            <td class="text-center"><button class="btn btn-danger btn-sm store__btn-delete" data-shopNo="{{shopNo}}">delete</button></td>
                        </tr>
                        {{/shops}}
                        </tbody>
                    </table>
                </div>
                <div class="store__table-footer text-right">
                    <a href="/shop/add" class="btn btn-sm btn-outline-primary font-weight-bold">Add Shop</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{>layout/footer}}